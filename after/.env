KC_DB=postgres
KC_DB_URL=jdbc:postgresql://keycloak-db:5432/keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=keycloakpw

# Keycloak admin credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Keycloak realm import (path inside the container)
KEYCLOAK_IMPORT=/opt/keycloak/data/import/realm-export.json

# Keycloak hostname configuration (crucial for correct redirect URLs)
KC_HOSTNAME=localhost
KC_HOSTNAME_PORT=8080

POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=keycloakpassword

LDAP_ORGANISATION=Example Corp
LDAP_DOMAIN=example.com
LDAP_ADMIN_PASSWORD=adminpw

PHPLDAPADMIN_LDAP_HOSTS=ldap
PHPLDAPADMIN_HTTPS=false
PHPLDAPADMIN_LDAP_PORT=389
PHPLDAPADMIN_LDAP_BASE_DN=dc=example,dc=com
PHPLDAPADMIN_LDAP_ADMIN_DN=cn=admin,dc=example,dc=com
PHPLDAPADMIN_LDAP_ADMIN_PASSWORD=adminpw
PHPLDAPADMIN_LDAP_TLS=false
PHPLDAPADMIN_LDAP_START_TLS=false
PHPLDAPADMIN_LDAP_SSL=false
PHPLDAPADMIN_LDAP_READONLY_USER=false
PHPLDAPADMIN_LDAP_USER_FILTER=(objectClass=*)
PHPLDAPADMIN_LDAP_GROUP_FILTER=(objectClass=groupOfNames)
